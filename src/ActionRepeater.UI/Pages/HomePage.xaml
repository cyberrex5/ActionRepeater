<Page x:Class="ActionRepeater.UI.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:views="using:ActionRepeater.UI.Views"
      Background="{ThemeResource AppBackgroundThemeBrush}"
      mc:Ignorable="d">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0"
                      Margin="0,0,0,-6"
                      CanContentRenderOutsideBounds="True"
                      HorizontalScrollBarVisibility="Auto"
                      HorizontalScrollMode="Enabled"
                      IsVerticalRailEnabled="False"
                      VerticalScrollBarVisibility="Disabled"
                      VerticalScrollMode="Disabled"
                      ZoomMode="Disabled">

            <Frame x:Name="_ribbonFrame"
                   MinHeight="58"
                   Margin="0,0,0,12" />

        </ScrollViewer>

        <views:ActionListView x:Name="_actionList" Grid.Row="1" />

    </Grid>

</Page>
