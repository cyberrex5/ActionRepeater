<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ctrls="using:ActionRepeater.UI.Controls">

    <Style TargetType="ctrls:ComboboxSeperator">
        <Setter Property="Margin" Value="0,5" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="IsTabStop" Value="False" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ctrls:ComboboxSeperator">
                    <Rectangle Height="1" Fill="{StaticResource AppBarSeparatorForeground}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="ctrls:OptionsSeperator">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ctrls:OptionsSeperator">
                    <Rectangle Height="2"
                               Margin="12,10"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Top"
                               Fill="{ThemeResource AppBarSeparatorForeground}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
